<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView android:id="@+id/cv_trip_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="1dp" android:layout_marginRight="5dp" android:layout_marginBottom="8dp" app:cardCornerRadius="8dp" app:cardElevation="8dp">
        <RelativeLayout android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_car_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pickup, 7 feet 1 Ton (Open)"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_trip_status" android:background="@drawable/bg_txtv_ontheway" android:paddingLeft="7dp" android:paddingTop="2dp" android:paddingRight="7dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bidding" android:layout_centerHorizontal="true" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="14sp" android:id="@+id/txtv_trip_id" android:paddingLeft="7dp" android:paddingTop="2dp" android:paddingRight="7dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="T_547357645647" android:layout_below="@+id/tv_car_details"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_loading_date_time" android:paddingLeft="7dp" android:paddingTop="2dp" android:paddingRight="7dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="9 AM , 18/11/2022" android:layout_below="@+id/tv_car_details" android:layout_centerHorizontal="true" android:layout_alignParentEnd="true"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cv_loading_unloading" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_loading_date_time">
                <ImageView android:id="@+id/imgv_direction" android:layout_width="20dp" android:layout_height="0dp" android:src="@drawable/loading_point" android:scaleType="centerCrop" android:scaleY="5" app:layout_constraintBottom_toBottomOf="@+id/lay_1" app:layout_constraintDimensionRatio="1:1" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <RelativeLayout android:id="@+id/lay_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="10dp" app:layout_constraintStart_toEndOf="@+id/imgv_direction" app:layout_constraintTop_toTopOf="0">
                    <TextView android:textSize="14sp" android:id="@+id/tv_loading_upazila_district" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Upazila: Mirpur, District: Dhaka" android:drawableLeft="@drawable/ic_outline_play_arrow_24"/>
                    <TextView android:textSize="14sp" android:id="@+id/tv_loading_full_address" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Full Address: Mirpur-1, Dhaka-1207" android:drawableLeft="@drawable/ic_outline_play_arrow_24" android:layout_below="@+id/tv_loading_upazila_district"/>
                    <View android:id="@+id/view_1" android:background="#6a6969" android:layout_width="match_parent" android:layout_height="0.7dp" android:layout_marginRight="50dp" android:layout_below="@+id/tv_loading_full_address"/>
                    <TextView android:textSize="14sp" android:id="@+id/tv_unloading_upazila_district" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Upazila: Dhanmondi, District: Dhaka" android:drawableLeft="@drawable/ic_outline_play_arrow_24" android:layout_below="@+id/view_1"/>
                    <TextView android:textSize="14sp" android:id="@+id/tv_unloading_full_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Full Address: Dhanmondi-1, \10Dhaka-1205" android:drawableLeft="@drawable/ic_outline_play_arrow_24" android:layout_below="@+id/tv_unloading_upazila_district"/>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout android:orientation="vertical" android:id="@+id/lay_trip_details" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/cv_trip_header">
        <com.google.android.material.card.MaterialCardView android:id="@+id/cv_additional" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="8dp" app:cardCornerRadius="8dp" app:cardElevation="8dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:paddingStart="10dp" android:paddingEnd="10dp">
                <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_description_header" android:paddingTop="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Product Description"/>
                <TextView android:textSize="14sp" android:id="@+id/tv_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="▷ Fragile Product, You have to carry it very safely" android:layout_below="@+id/tv_description_header"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_up_down_trip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="✔ Up-Down Trip" android:layout_below="@+id/tv_description"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_contain_animal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="✔ Contain Animal" android:layout_below="@+id/tv_up_down_trip"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_fragile_product" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="✔ Fragile Product" android:layout_below="@+id/tv_contain_animal"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_perishable_product" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="✔ Perishable Product" android:layout_below="@+id/tv_fragile_product"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_labor_needed" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="✔ Labor Needed" android:layout_below="@+id/tv_perishable_product"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_start_bidding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:text="Start Bidding" android:layout_below="@+id/cv_additional" android:layout_centerHorizontal="true" android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>