<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imgv_close"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/ic_outline_close_24"
            />
        <ImageView
            android:id="@+id/imgv_car"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/car"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_car_details"
            android:layout_below="@+id/imgv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup, 7 feet 1 Ton (Open)"

            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_car_date_time"
            android:layout_below="@+id/tv_car_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="( 9 AM , 18/11/2022 )"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            />



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_loading_unloading"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_car_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/tv_loading_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Info on Load Location"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="7dp"
                    />
                <TextView
                    android:id="@+id/tv_loading_upazila_district"
                    android:layout_below="@+id/tv_loading_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--> Upazila: Mirpur, District: Dhaka"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    />
                <TextView
                    android:id="@+id/tv_loading_nearAt"
                    android:layout_below="@+id/tv_loading_upazila_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--> Near At: Mirpur-1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    />
                <TextView
                    android:id="@+id/tv_loading_full_address"
                    android:layout_below="@+id/tv_loading_nearAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--> Full Address: Mirpur-1, Dhaka-1207"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    />
                <TextView
                    android:id="@+id/tv_unloading_header"
                    android:layout_below="@+id/tv_loading_full_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Info on Unload Location"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="2dp"
                    />
                <TextView
                    android:id="@+id/tv_unloading_upazila_district"
                    android:layout_below="@+id/tv_unloading_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--> Upazila: Dhanmondi, District: Dhaka"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    />
                <TextView
                    android:id="@+id/tv_unloading_nearAt"
                    android:layout_below="@+id/tv_unloading_upazila_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--> Near At: Dhanmondi-1, Dhaka-1205"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tv_unloading_full_address"
                    android:layout_below="@+id/tv_unloading_nearAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--> Full Address: Dhanmondi-1, Dhaka-1205"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    />
                <TextView
                    android:id="@+id/tv_description_header"
                    android:layout_below="@+id/tv_unloading_full_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Description"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingTop="7dp"
                    />
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_below="@+id/tv_description_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fragile Product, You have to carry it very safely"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_additional"
            android:layout_below="@id/cv_loading_unloading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/tv_up_down_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ Up-Down Trip"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_contain_animal"
                    android:layout_below="@+id/tv_up_down_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ Contain Animal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_fragile_product"
                    android:layout_below="@+id/tv_contain_animal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ Fragile Product"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_perishable_product"
                    android:layout_below="@+id/tv_fragile_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ Perishable Product"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_labor_needed"
                    android:layout_below="@+id/tv_perishable_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✔ Labor Needed"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_review"
            android:layout_below="@id/cv_additional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Publish for Bidding"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            />


    </RelativeLayout>




</ScrollView>