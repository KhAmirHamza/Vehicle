                    android:id="@+id/autocomplete_unloading_upazila"
                    android:layout_width="fill_parent"
                    android:layout_height="56dp"
                    android:paddingLeft="16dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_unloading_area"
                android:layout_below="@id/text_input_layout_unloading_upazila"
                android:hint="Write Area (within above chosen place)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:textColorHint="@color/black"
                app:startIconTint="@color/black"
                app:endIconTint="@color/black"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_unloading_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_full_unloading_address"
                android:layout_below="@id/text_input_layout_unloading_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:textColorHint="@color/black"
                app:startIconTint="@color/black"
                app:endIconTint="@color/black"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_full_unloading_address"
                    android:text="House Name (for villager)/Number (for town):        ,\nRoad No:        ,\nBlock:      "
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_unloading_landmark"
                android:layout_below="@id/text_input_layout_full_unloading_address"
                android:hint="Na/O Nearby School/ Mosque/ other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:textColorHint="@color/black"
                app:startIconTint="@color/black"
                app:endIconTint="@color/black"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_unloading_landmark"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_unloading_personName"
                android:layout_below="@id/text_input_layout_unloading_landmark"
                android:hint="Name of person at unload location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:textColorHint="@color/black"
                app:startIconTint="@color/black"
                app:endIconTint="@color/black"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_unloading_person"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_unloading_mobileNumber"
                android:layout_below="@id/text_input_layout_unloading_personName"
                android:hint="Mobile num of person at unload location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:textColorHint="@color/black"
                app:startIconTint="@color/black"
                app:endIconTint="@color/black"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_unloading_mobile"
                    android:inputType="phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_additional"
        android:layout_below="@id/cv_unloading_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/rl_additional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Category of product need to carry"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="7dp"
                />
            <Spinner
                android:id="@+id/spinner_product_category"
                android:layout_below="@id/tv_product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tooltipText="Select Vehicle Size or Capacity"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_product_description"
                android:layout_below="@id/spinner_product_category"
                android:hint="Product Info (Main Items, Amount/Quantity)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:textColorHint="@color/black"
                app:startIconTint="@color/black"
                app:endIconTint="@color/black"
                app:endIconMode="clear_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_trip_description"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--<CheckBox
                android:id="@+id/cbUpDownTrip"

                android:layout_below="@id/text_input_layout_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Up-Down Trip "/>-->


            <CheckBox
                android:id="@+id/cbContainAnimal"
                android:layout_below="@id/text_input_layout_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contain Animal "/>

            <CheckBox
                android:id="@+id/cbFragile"
                android:layout_below="@id/cbContainAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fragile "/>

            <CheckBox
                android:id="@+id/cbPerishable"
                android:layout_below="@id/cbFragile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perishable "/>

            <CheckBox
                android:id="@+id/cbLaborNeeded"
                android:layout_below="@id/cbPerishable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Labor Needed (Separate Cost)"/>
            <CheckBox
                android:id="@+id/cbWeightAlert"
                android:layout_below="@id/cbLaborNeeded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight not more than capacity of truck booked"/>

            <CheckBox
                android:id="@+id/cbLengthAlert"
                android:layout_below="@id/cbWeightAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Length of material are not more than truck length booked"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_stop_point"
        android:visibility="gone"
        android:layout_below="@id/cv_additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/rl_stop_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/tv_stop_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop point info(optional)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_stop_point_address"
                android:layout_below="@id/tv_stop_header"
                android:visibility="gone"
                android:hint="Write Stop point address"
                android:layout_width="match_parent"
